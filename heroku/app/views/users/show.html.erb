<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Mail:</b>
  <%= @user.mail %>
</p>
<h2>Articles</h2>
<% @user.articles.each do |article| %>
  <p>
    <b>Title:</b>
    <%= article.title %>
  </p>
 
  <p>
    <b>Description:</b>
    <%= article.description %>
  </p>
<% end %>
<h2>Add an Article:</h2>
<%= form_for([@user, @user.articles.build]) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
